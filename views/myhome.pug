            td(scope='row') State
            th #{ownerinfo.state}
            td City
            th #{ownerinfo.city}
          tr
            td(scope='row') Village/Street
            th #{ownerinfo.village}
            td Zip
            th #{ownerinfo.zip}
          tr
            td(scope='row') Address
            th(colspan="3") #{ownerinfo.address}
            //- td Zip
            //- th #{ownerinfo.zip}
          tr
            td(scope='row') Room For
            th #{ownerinfo.roomfor}
            td Room Type
            th #{ownerinfo.roomtype}
          tr
