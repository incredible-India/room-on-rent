            th #{ownerinfo.downpayment}
          tr
            td(scope='row') Rent Information
            th(colspan="3") #{ownerinfo.anyotherinforent}
          tr
            td(scope='row') Room Informations
            th(colspan="3") #{ownerinfo.anyotherinforoom}
          tr
            td(scope='row') D.O.B
            th(colspan="3") #{ownerinfo.dob}

          tr 
            td(scope="row") Date Of Registration
            th(colspan="3") #{ownerinfo.dateofrgisteration}

    

    .container 
      .ownerpic 
        h3.bg-light.nameofhim Owner Image 
        img.malikkaphoto.img-fluid(src="data:" + ownerinfo.landimg.ContentType + "; base64 ," + ownerinfo.landimg.data.toString('base64'), alt="User image" )



    
    .container 
      .ownerpic 
        h3.bg-light.nameofhim Owner`s Signature 
        img.malikkaphoto.img-fluid(src="data:" + ownerinfo.landsignature.ContentType + "; base64 ," + ownerinfo.landsignature.data.toString('base64'), alt="User image" )
            

    .container 
      .ownerpic 
        h3.bg-light.nameofhim Owner`s Document 
        img.malikkaphoto.img-fluid(src="data:" + ownerinfo.documentImg.ContentType + "; base64 ," + ownerinfo.documentImg.data.toString('base64'), alt="User image" )
    







    

        
    .container 
      .ownerpic 
        h3.bg-light.nameofhim Room`s Gallary

